<?xml version="1.0" encoding="utf-8"?>
<mujoco>
	<size njmax="8000" nconmax="4000"/>
	<compiler angle="radian" coordinate="local" meshdir="../stls/fetch" texturedir="../textures"></compiler>
	<option timestep="0.002">
		<flag warmstart="enable"></flag>
	</option>

	<include file="shared.xml"></include>
	
	<worldbody>
		<geom name="floor0" pos="0 0 0" size="0.85 0.7 1" type="plane" condim="3" material="floor_mat"></geom>

		<body name="floor0" pos="0 0 0">
			<site name="target0" pos="0 0 0.3" size="0.02 0.02 0.02" rgba="1 0 0 1" type="sphere"></site>
		</body>

		<include file="robot.xml"></include>
		
		<!--<body pos="1.3 0.75 0.2" name="table0">
			<geom size="0.25 0.35 0.2" type="box" mass="2000" material="table_mat"></geom>
		</body> -->

		<body name="B0_0" pos="0 0 0">
		    <freejoint name="cloth"/>
		    <composite type="cloth" count="9 9 1" spacing="0.03" flatinertia="0.01" >
		        <joint kind="main" damping="0.003" stiffness="0.001"/>
		        <tendon width="0.001" kind="shear" stiffness="0.001" damping="0.002" />
        		<skin material="mm" texcoord="true" inflate="0.002" subgrid="2"/>
		        <geom type="sphere" size="0.004" rgba=".8 .2 .1 1" mass="0.008" friction="1.55 0.005 0.001" material="matcarpet"/>
		    </composite>
	    </body>

		<light directional="true" ambient="0.2 0.2 0.2" diffuse="0.8 0.8 0.8" specular="0.3 0.3 0.3" castshadow="false" pos="0 0 4" dir="0 0 -1" name="light0"></light>
	</worldbody>
	
	<actuator></actuator>
</mujoco>
