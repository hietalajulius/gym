<?xml version="1.0" encoding="utf-8"?>
<mujoco>
	<size nconmax="4000" njmax="8000" nstack="1000000"/>
	<compiler angle="radian" coordinate="local" meshdir="../stls/fetch" texturedir="../textures"></compiler>
	<option timestep="0.002">
		<flag warmstart="enable"></flag>
	</option>

	<include file="shared.xml"></include>
	
	<worldbody>
		<geom name="floor0" pos="0 0 0" size="0.85 0.7 1" type="plane" condim="6" density="1000000" material="floor_mat"></geom>

		<!--<body name="floor0" pos="0 0 0">-->
			<site name="target0" pos="0 0 0.3" size="0.005 0.005 0.005" rgba="1 0 0 1" type="sphere"></site>
            <site name="target1" pos="0 0 0.4" size="0.005 0.005 0.005" rgba="1 0 0 1" type="sphere"></site>
			<site name="target2" pos="0 0 0.3" size="0.005 0.005 0.005" rgba="1 0 0 1" type="sphere"></site>
            <site name="target3" pos="0 0 0.4" size="0.005 0.005 0.005" rgba="1 0 0 1" type="sphere"></site>
		<!--</body>-->

		<include file="robot.xml"></include>

		<body name="B0_0" pos="0 0 0">
		    <freejoint name="cloth"/>
		    <composite type="cloth" count="9 9 1" spacing="0.03" flatinertia="0.01" >
		        <joint kind="main" damping="0.003" stiffness="0.001"/>
		        <tendon width="0.001" kind="shear" stiffness="0.001" damping="0.01" />
        		<skin material="mm" texcoord="true" inflate="0.002" subgrid="3" />
		        <geom type="sphere" size="0.004" rgba=".8 .2 .1 1" mass="0.008" friction="1.55 0.005 0.001"/>
		    </composite>
	    </body>

		<body name="external_camera" pos="1 1 1">
			<camera euler="0 0.75 1.57" fovy="43.3" name="external_camera_0" pos="1.3 0 1.2"></camera>
		</body>

		<light directional="true" ambient="0.2 0.2 0.2" diffuse="0.8 0.8 0.8" specular="0.3 0.3 0.3" castshadow="false" pos="0 0 4" dir="0 0 -1" name="light0"></light>
	</worldbody>
	
	<actuator></actuator>
</mujoco>
